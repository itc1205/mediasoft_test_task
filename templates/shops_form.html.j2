{% extends "base.html.j2" %}{% block content %}
<article class="grid">
    <hgroup>
        <h1>
            Регистрация магазина
        </h1>
        <h2>
            Обязательно введите все данные
        </h2>
    </hgroup>
    <form action="/shop/" method="POST">
        <input type="text" name="name" placeholder="Имя магазина" required>
        <input type="text" name="city" placeholder="Город" required>
        <input type="text" name="street" placeholder="Улица" required>
        <input type="number" name="house" placeholder="Дом" required>
        <input type="time" name="opening_time" placeholder="Время открытия" required>
        <input type="time" name="closing_time" placeholder="Время закрытия" required>
        <button type="submit" class="contrast" id="reg">Зарегестрировать</button>
    </form>
    
    <script src="/static/js/post.js"></script>
</article>
{% endblock content %}